{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build Kernel",
        "type": "shell",
        "command": [
          "cargo",
          "run",
          "--package",
          "runner",
          "--"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
      },
      {
        "label": "Run Kernel in QEMU",
        "type": "shell",
        "command": [
          "cargo",
          "run",
          "--package",
          "runner",
          "--",
          "--boot"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
      },
      {
        "label": "Create Bootable USB Flash Drive",
        "type": "shell",
        "command": [
          "./write_img_unix_like.sh"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
      },
      {
        "label": "Clean",
        "type": "shell",
        "command": [
          "cargo",
          "clean",
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
      },
    ]
  }