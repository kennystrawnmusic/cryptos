{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build Kernel",
        "type": "shell",
        "command": [
          "RUST_BACKTRACE=1",
          "cargo",
          "run",
          "--package",
          "runner",
          "--"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
      },
      {
        "label": "Run Kernel in QEMU",
        "type": "shell",
        "command": [
          "RUST_BACKTRACE=1",
          "cargo",
          "run",
          "--package",
          "runner",
          "--",
          "--boot"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
      },
      {
        "label": "Create Bootable USB Flash Drive (Linux/MacOS only)",
        "type": "shell",
        "command": [
          "./write_img_unix_like.sh"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
      },
      {
        "label": "Clean",
        "type": "shell",
        "command": [
          "cargo",
          "clean",
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
      },
      {
        "label": "Clean and rebuild",
        "type": "shell",
        "command": [
          "cargo",
          "cache",
          "-r",
          "all",
          "&&",
          "cargo",
          "clean",
          "&&",
          "cargo",
          "run",
          "--package",
          "runner",
          "--",
          "--boot",
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
      }
    ]
  }