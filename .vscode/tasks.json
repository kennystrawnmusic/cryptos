{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Install All Recommended Extensions",
        "type": "shell",
        "command": "jq -r '.recommendations[]' ./.vscode/extensions.json | xargs -L 1 code --install-extension",
        "runOptions": {
          "runOn": "folderOpen"
        },
        "presentation": {
          "reveal": "silent"
        }
      },
      {
        "label": "Build Kernel",
        "type": "shell",
        "command": [
          "cargo",
          "run",
          "--package",
          "runner",
          "--"
        ]
      },
      {
        "label": "Run Kernel in QEMU",
        "type": "shell",
        "command": [
          "cargo",
          "run",
          "--package",
          "runner",
          "--",
          "--boot"
        ]
      },
      {
        "type": "cargo",
        "command": "build",
        "problemMatcher": [
          "$rustc"
        ],
        "group": "build",
        "label": "rust: cargo build"
      }
    ]
  }