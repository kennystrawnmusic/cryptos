{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build Kernel",
        "type": "shell",
        "command": [
          "cargo",
          "run",
          "--package",
          "runner",
          "--"
        ]
      },
      {
        "label": "Run Kernel in QEMU",
        "type": "shell",
        "command": [
          "cargo",
          "run",
          "--package",
          "runner",
          "--",
          "--boot"
        ]
      },
      {
        "type": "cargo",
        "command": "build",
        "problemMatcher": [
          "$rustc"
        ],
        "group": "build",
        "label": "rust: cargo build"
      }
    ]
  }